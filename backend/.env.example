# Backend Environment Variables Template
# Copy this to .env.local (localhost) or set in Render.com dashboard (production)

# Frontend URL (CORS allowed origin)
# Localhost: http://localhost:3000
# Production: https://todo-app-hackathon.vercel.app
FRONTEND_URL=https://todo-app-hackathon.vercel.app

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Better Auth Configuration
# Localhost: http://localhost:3000
# Production: https://todo-app-hackathon.vercel.app
BETTER_AUTH_ISSUER=https://todo-app-hackathon.vercel.app
API_AUDIENCE=https://todo-app-hackathon.vercel.app
BETTER_AUTH_JWKS_URL=https://todo-app-hackathon.vercel.app/api/auth/jwks

# Server Configuration
HOST=0.0.0.0
PORT=10000
